{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": {"when": "$(basename).py"},
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },
    "python.pythonPath": "venv/bin/python",
    "git.ignoreLimitWarning": true
}